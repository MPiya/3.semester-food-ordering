@{
    ViewData["Title"] = "List of Products";
}


<h1 class="align-content-center">Menu</h1>



    <table class="table">
        <thead>
            @* Define roll of cells*@
            <tr class="text-center">
                @* header cell*@
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        
       
         <tbody>
            @foreach (var item in Model)
            {
            <tr>

                @* data cell*@
                <td class="align-middle">
                    @item.Name
                </td>
                <td class="align-middle">
                    @item.Price DKK
                </td>

                <td class="align-middle">
                        <a button class="btn btn-outline-success " asp-controller="Orders"  asp-action="Details" asp-route-ID="@item.ID">Order </a>
                </td>

               

            </tr>
            }
        </tbody>
</table>


    

<div class="btn-group">
    <a class="btn btn-outline-success" asp-controller="Products" asp-action="Index"> Add more items</a>
</div>

